@{
  Layout = "_Layout";
}

@using Restaurant.Models;
@model List<Restaurant.Models.Cuisines>;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 

@foreach (Cuisines cuisines in Model)
{
  <li>@Html.ActionLink($"{cuisines.Name}", "Details", new { id = cuisines.CuisinesId })</li>
}

<p>@Html.ActionLink("Add new cuisines", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>